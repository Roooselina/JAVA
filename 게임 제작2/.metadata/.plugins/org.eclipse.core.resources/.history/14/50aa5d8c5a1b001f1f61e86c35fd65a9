package Monster;

import java.io.IOException;
import java.util.Random;

import javax.imageio.ImageIO;

import Entity.CommonEntity;
import main.GamePanel;

public class MON_TreeMonster extends CommonEntity {

	public MON_TreeMonster(GamePanel gp) {
		super(gp);

		name = "나무 정령";
		speed = 1;
		maxLife = 4;
		life = maxLife;

		solidArea.x = 44;
		solidArea.y = 55;
		solidArea.width = 45;
		solidArea.height = 30;
		solidAreaDefaultX = solidArea.x;
		solidAreaDefaultY = solidArea.y;

	}

	public void getImage() {
		try {
			st1 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무.gif"));
			left1 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무.gif"));
			right1 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무 좌우반전.gif"));

		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public void setAction() {
		spriteCounter++;
        if (spriteCounter > 10) {
        	Random random = new Random();
        	int i = random.nextInt(100)+1;
            
        }
	}

}
