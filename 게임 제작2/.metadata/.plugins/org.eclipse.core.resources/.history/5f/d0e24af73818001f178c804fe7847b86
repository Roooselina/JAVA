package Tile;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class TileRead {
    int[][] matrix;



    public int[][] readMatrixFromFile(String filePath) {
        int[][] matrix = null;

        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {
            String line;
            int rows = 0;
            int cols = 0;

            // 먼저 파일의 행과 열 개수를 읽어와서 행렬 크기를 결정
            while ((line = br.readLine()) != null) {
                if (rows == 0) {
                    // 첫 번째 줄의 열 개수를 결정
                    cols = line.replaceAll("\\s+", "").length(); // 공백을 제거하고 길이를 계산
                }
                rows++;
            }

            // 행렬 초기화
            matrix = new int[rows][cols];

            // 파일을 다시 읽어들여 행렬에 값을 저장
            int row = 0;
            br.close();
            try (BufferedReader br2 = new BufferedReader(new FileReader(filePath))) {
                while ((line = br2.readLine()) != null) {
                    String[] tokens = line.split(""); // 각 문자 단위로 분리
                    for (int col = 0; col < tokens.length; col++) {
                        matrix[row][col] = Integer.parseInt(tokens[col]);
                    }
                    row++;
                }
            }

        } catch (IOException e) {
            System.out.println("파일을 찾을 수 없습니다: " + e.getMessage());
        } catch (NumberFormatException e) {
            System.out.println("파일의 형식이 올바르지 않습니다: " + e.getMessage());
        }

        return matrix;
    }
    
}