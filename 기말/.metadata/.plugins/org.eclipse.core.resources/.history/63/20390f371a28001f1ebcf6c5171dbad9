package 교과서_10_2;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Font;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

class myFrame extends JFrame {
	JPanel p1, p2;
	JPanel p2_1, p2_2, p2_3;
	JButton com1, com2, com3;
	JButton us1, us2, us3;
	JLabel us, com;
	JLabel text, vs;

	myFrame() {
		this.setSize(800, 600);
		this.setLayout(null);
		this.setLayout(new BorderLayout());
		p1 = new JPanel();
		p2 = new JPanel();


		text = new JLabel("가위, 바위, 보 게임");
		text.setFont(new Font("Gulim", Font.PLAIN, 30));
		p1.add(text);
		this.add(p1, BorderLayout.NORTH);
		this.add(p2, BorderLayout.CENTER);

		p2.setLayout(new GridLayout(1, 3));
		
		p2_1 = new JPanel();
		p2_1.setLayout(new GridLayout(4, 1, 50, 50));
		us1 = new JButton("가위");
		us1.addActionListener(e->{
			us1.setBackground(Color.ORANGE);
			us2.setBackground(null);
			us3.setBackground(null);
		});
		us2 = new JButton("바위");
		us2.addActionListener(e->{
			us1.setBackground(null);
			us2.setBackground(Color.ORANGE);
			us3.setBackground(null);
		});
		us3 = new JButton("보");
		us3.addActionListener(e->{
			us1.setBackground(null);
			us2.setBackground(null);
			us3.setBackground(Color.ORANGE);
		});
		us = new JLabel("사용자");
		p2_1.add(us1);
		p2_1.add(us2);
		p2_1.add(us3);
		p2_1.add(us);
		p2.add(p2_1);
		
		p2_2 = new JPanel();
		p2_2.setLayout(new GridLayout(1, 4));
		vs = new JLabel("VS");
		vs.setFont(new Font("Gulim", Font.PLAIN, 30));
		p2_2.add(new JLabel(" "));
		p2_2.add(vs);
		p2.add(p2_2);

		p2_3 = new JPanel();
		p2_3.setLayout(new GridLayout(4, 1, 50, 50));
		com1 = new JButton("가위");
		com2 = new JButton("바위");
		com3 = new JButton("보");
		com = new JLabel("컴퓨터");
		p2_3.add(com1);
		p2_3.add(com2);
		p2_3.add(com3);
		p2_3.add(com);
		p2.add(p2_3);
		
		this.setVisible(true);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
}

public class 교과10_2 {
    public static void main(String[] args) {
        myFrame m = new myFrame();
    }
}

