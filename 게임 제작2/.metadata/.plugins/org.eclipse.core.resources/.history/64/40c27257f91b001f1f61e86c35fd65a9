package Monster;

import java.io.IOException;
import java.util.Random;

import javax.imageio.ImageIO;

import Entity.CommonEntity;
import main.GamePanel;

public class MON_TreeMonster extends CommonEntity {
	
	public MON_TreeMonster(GamePanel gp) {
		super(gp);

		name = "나무 정령";
		speed = 1;
		maxLife = 4;
		life = maxLife;

		solidArea.x = 44;
		solidArea.y = 55;
		solidArea.width = 45;
		solidArea.height = 30;
		solidAreaDefaultX = solidArea.x;
		solidAreaDefaultY = solidArea.y;

		getImage();
		
		actionLockerCounter = 0;

	}

	public void getImage() {
		try {
			st1 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무1.png"));
			st2 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무2.png"));
			st3 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무3.png"));
			st4 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무4.png"));
			left1 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무1 좌우반전.png"));
			left2 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무2 좌우반전.png"));
			left3 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무3 좌우반전.png"));
			left4 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무4 좌우반전.png"));
			right1 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무1.png"));
			right2 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무2.png"));
			right3 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무3.png"));
			right4 = ImageIO.read(getClass().getResourceAsStream("/monsters/나무4.png"));
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	public void setAction() {
		actionLockerCounter += 1;

		if (actionLockerCounter == 10) {
			Random random = new Random();
			int i = random.nextInt(100) + 1;

			if (i <= 25)
				direction = "up";
			else if (i > 25 && i <= 50)
				direction = "down";
			else if (i > 50 && i <= 75)
				direction = "left";
			else
				direction = "right";

			actionLockerCounter = 0;
		}

	}

}
