package main;

import Object.OBJ_BOX_LEFT;
import Object.OBJ_BOX_RIGHT;
import Object.OBJ_STAIR;

public class ObjectSetter {
	GamePanel gp;
	
	public ObjectSetter(GamePanel gp) {
		this.gp = gp;
	}
	
	public void setObject() {
		gp.obj[0] = new OBJ_BOX_LEFT();
		gp.obj[0].worldX = 2 * gp.getOrigianlCharacterSize();
		gp.obj[0].worldY = 1 * gp.getOrigianlCharacterSize();
		
		gp.obj[1] = new OBJ_BOX_LEFT();
		gp.obj[1].worldX = 2 * gp.getOrigianlCharacterSize();
		gp.obj[1].worldY = 14 * gp.getOrigianlCharacterSize();
		
		gp.obj[2] = new OBJ_BOX_RIGHT();
		gp.obj[2].worldX = 3 * gp.getOrigianlCharacterSize();
		gp.obj[2].worldY = 1 * gp.getOrigianlCharacterSize();
		
		gp.obj[3] = new OBJ_BOX_RIGHT();
		gp.obj[3].worldX = 3 * gp.getOrigianlCharacterSize();
		gp.obj[3].worldY = 14 * gp.getOrigianlCharacterSize();
		
		gp.obj[4] = new OBJ_STAIR();
		gp.obj[4].worldX = 0 * gp.getOrigianlCharacterSize();
		gp.obj[4].worldY = 8 * gp.getOrigianlCharacterSize();
		
		gp.obj[5] = new OBJ_STAIR();
		gp.obj[5].worldX = 0 * gp.getOrigianlCharacterSize();
		gp.obj[5].worldY = 9 * gp.getOrigianlCharacterSize();
		
		gp.obj[6] = new OBJ_STAIR();
		gp.obj[6].worldX = 0 * gp.getOrigianlCharacterSize();
		gp.obj[6].worldY = 10 * gp.getOrigianlCharacterSize();
		
		
	}
}
